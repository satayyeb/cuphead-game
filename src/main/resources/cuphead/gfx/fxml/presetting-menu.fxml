<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cuphead.gfx.view.PresettingMenu"
            prefHeight="500" prefWidth="1200"
            stylesheets="@../css/style.css">

    <center>
        <VBox alignment="CENTER" spacing="25">
            <Text text="میزان دشواری بازی را انتخاب کنید." styleClass="big"/>
            <ComboBox styleClass="medium" fx:id="comboBox"/>
            <Label text="انتخاب حالت شیطان" fx:id="devilMode" styleClass="medium"/>
            <Button text="شروع بازی" onAction="#startGame"/>
            <Button text="بازگشت" onAction="#back"/>
        </VBox>
    </center>
</BorderPane>
